<h1>Cart Details</h1>

{{#if mensaje}}
    <p>{{mensaje}}</p>
{{else}}
    {{#if cart}}
        <h2>Cart ID: {{cart._id}}</h2>
        <h3>Products:</h3>
        <ul>
            {{#each cart.products}}
                <li>
                    Product: {{this.product.title}} - Quantity: {{this.quantity}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>Cart is empty.</p>
    {{/if}}
{{/if}}